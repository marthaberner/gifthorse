<div class="greeting">
  <h3>Hello, <%= @user.first_name %></h3>
</div>
<div class="user-page-container">
  <div class="list-gifts-container">
    <h3>My Items</h3>
    <% if @user.bookmarks.empty? %>
      <div class="empty-list">
        <p>Your GiftHorse list is empty.<br><br> To add items to your list, drag this
          <a href="javascript:(function(){document.body.appendChild(document.createElement('script')).src='http://<%= request.host_with_port %>/js/bookmark.js';})();">GiftHorse</a>
          bookmark to your browser.<br><br>
          Then simply browse the web and click the bookmark to add cool things here.</p>
      </div>
    <% else %>
      <% @bookmarks.each do |bookmark| %>
        <% if bookmark_belongs_to_user?(bookmark) %>
          <div class="list-bookmarks">
            <ul>
              <li>
                <a href="<%= bookmark.url %>" target="_blank"><%= bookmark.title[0..45] + " ..." %></a>
                <%= link_to "Delete", bookmark_path(bookmark.id), method: :delete, class: "delete" %>
              </li>
            </ul>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>

