<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <ul class="errors">
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= f.label :email, class: "form-label" %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :user_confirmation, class: "form-label" %>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.submit "Create An Account", class: "submit-button" %>
  </p>
<% end %>